---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import PostCard from "../components/PostCard.astro";
import TerminalWindow from "../components/TerminalWindow.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import slidesManifest from "../../public/slides/talks.json";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const recentPosts = posts.slice(0, 5);
const postCount = posts.length;

const talks = slidesManifest;
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <!-- Terminal boot sequence -->
  <TerminalWindow>
    <div class="boot">
      <div>
        <span class="ok">[&nbsp;OK&nbsp;]</span> Loading blog posts&hellip;
      </div>
      <div>
        <span class="ok">[&nbsp;OK&nbsp;]</span> Detected <span
          class="highlight">{postCount}</span
        > articles
      </div>
      <div>
        <span class="ok">[&nbsp;OK&nbsp;]</span> Detected <span
          class="highlight">{talks.length}</span
        > talk{talks.length !== 1 ? "s" : ""}
      </div>
      <div>
        <span class="ok">[&nbsp;OK&nbsp;]</span> No bugs found. <span
          class="highlight">Suspicious.</span
        >
      </div>
      <div style="margin-top: 0.5rem">
        <span class="prompt">$</span> cat ./README.md<span class="cursor"
        ></span>
      </div>
    </div>
  </TerminalWindow>

  <!-- ASCII header -->
  <div class="header-block">
    <pre class="ascii-art"
      >{` ____  _     ___   ____
| __ )| |   / _ \\ / ___|
|  _ \\| |  | | | | |  _
| |_) | |__| |_| | |_| |
|____/|_____\\___/ \\____| .kaya.sk`}</pre>
    <p class="tagline">Technical writing & live-coding insights</p>
  </div>

  <!-- Recent posts -->
  <div class="section">
    <div class="section-header">
      <span class="icon">üìù</span> Recent Posts
    </div>
    <div class="posts">
      {recentPosts.map((post) => <PostCard post={post} />)}
    </div>
    <a href="/blog" class="view-all">View all {postCount} posts &rarr;</a>
  </div>

  <!-- Talks -->
  <div class="section">
    <div class="section-header">
      <span class="icon">üé§</span> Talks
    </div>
    <div class="talks">
      {talks.map((talk) => (
        <a href={talk.url} class="talk-card">
          <span class="talk-title">{talk.title}</span>
          <span class="talk-link">‚Üó</span>
        </a>
      ))}
    </div>
    <a href="/talks" class="view-all">View all talks &rarr;</a>
  </div>
</BaseLayout>

<style>
  .header-block {
    text-align: center;
    margin: 2.5rem 0;
  }
  .ascii-art {
    font-size: 0.55rem;
    line-height: 1.15;
    color: var(--accent-cyan);
    margin-bottom: 1rem;
    overflow: hidden;
    text-align: left;
    display: inline-block;
    background: none;
    border: none;
    padding: 0;
  }
  @media (min-width: 640px) {
    .ascii-art {
      font-size: 0.7rem;
    }
  }
  .tagline {
    font-size: 0.85rem;
    color: var(--text-muted);
    letter-spacing: 0.15em;
    text-transform: uppercase;
  }
  .section {
    margin-bottom: 2rem;
  }
  .posts {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }
  .talks {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }
  .talk-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-decoration: none;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-left: 3px solid var(--border);
    border-radius: 0.25rem;
    padding: 0.75rem 1rem;
    transition: all 0.2s ease;
  }
  .talk-card:hover {
    background: var(--bg-surface);
    border-left-color: var(--accent-cyan);
    transform: translateX(4px);
  }
  .talk-title {
    color: var(--text-bright);
    font-size: 0.85rem;
    font-weight: 600;
  }
  .talk-card:hover .talk-title {
    color: var(--accent-cyan);
  }
  .talk-link {
    color: var(--text-muted);
    font-size: 0.85rem;
  }
  .view-all {
    display: inline-block;
    margin-top: 0.75rem;
    font-size: 0.75rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.15s;
  }
  .view-all:hover {
    color: var(--accent-cyan);
  }
</style>
