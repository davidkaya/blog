---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import MatrixRain from "../components/MatrixRain.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, tags } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <MatrixRain />
    <Header />
    <main>
      <article>
        <div class="post-header">
          <a href="/blog" class="back">&larr; back to posts</a>
          <div class="meta">
            <FormattedDate date={pubDate} />
            {
              updatedDate && (
                <span class="updated">
                  &middot; updated <FormattedDate date={updatedDate} />
                </span>
              )
            }
          </div>
          <h1>{title}</h1>
          {
            tags && tags.length > 0 && (
              <div class="tags">
                {tags.map((tag: string) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )
          }
          <hr />
        </div>
        <div class="prose">
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

<style>
  body {
    position: relative;
    z-index: 1;
  }
  main {
    position: relative;
    z-index: 1;
  }
  .post-header {
    margin-bottom: 2rem;
  }
  .back {
    display: inline-block;
    font-size: 0.8rem;
    color: var(--text-muted);
    text-decoration: none;
    margin-bottom: 1rem;
    transition: color 0.15s;
  }
  .back:hover {
    color: var(--accent-cyan);
  }
  .meta {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }
  .updated {
    color: var(--text-dim);
    font-style: italic;
  }
  h1 {
    font-size: 1.6rem;
    color: var(--text-bright);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }
  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
  }
  .tag {
    font-size: 0.65rem;
    letter-spacing: 0.05em;
    padding: 0.15rem 0.5rem;
    border-radius: 2px;
    border: 1px solid #3d3015;
    color: var(--accent-yellow);
    background: #1a1508;
  }
  hr {
    border: none;
    border-top: 1px solid var(--border);
  }
  .prose {
    line-height: 1.8;
  }
  .prose :global(h2) {
    margin-top: 2rem;
    padding-bottom: 0.3rem;
    border-bottom: 1px solid var(--border);
  }
  .prose :global(h3) {
    margin-top: 1.5rem;
  }
  .prose :global(p) {
    margin-bottom: 1.25em;
  }
  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1.25em;
  }
  .prose :global(pre) {
    margin: 1.5em 0;
  }
  .prose :global(blockquote) {
    margin: 1.5em 0;
  }
  .prose :global(img) {
    margin: 1.5em 0;
  }
</style>
